{
	"name": "stars-ssr-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"pm2:start": "pm2 start ecosystem.config.js --env production",
		"pm2:start:dev": "pm2 start ecosystem.config.js --env development --watch",
		"pm2:start:preview": "pm2 start ecosystem.config.js --env preview",
		"pm2:stop": "pm2 stop ecosystem.config.js",
		"pm2:stop:all": "pm2 stop all",
		"pm2:restart": "pm2 restart ecosystem.config.js",
		"pm2:restart:all": "pm2 restart all",
		"pm2:reload": "pm2 reload ecosystem.config.js",
		"pm2:delete": "pm2 delete ecosystem.config.js",
		"pm2:delete:all": "pm2 delete all",
		"pm2:logs": "pm2 logs",
		"pm2:logs:error": "pm2 logs --err",
		"pm2:logs:out": "pm2 logs --out",
		"pm2:monit": "pm2 monit",
		"pm2:status": "pm2 status",
		"pm2:info": "pm2 info stars-ssr-svelte-prod",
		"pm2:save": "pm2 save",
		"pm2:resurrect": "pm2 resurrect",
		"pm2:startup": "pm2 startup",
		"pm2:unstartup": "pm2 unstartup",
		"pm2:flush": "pm2 flush",
		"pm2:kill": "pm2 kill",
		"pm2:build:start": "npm run build && pm2 start ecosystem.config.js --env production",
		"pm2:build:reload": "npm run build && pm2 reload ecosystem.config.js --env production"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@fontsource/fira-mono": "^5.2.7",
		"@neoconfetti/svelte": "^2.2.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24",
		"drizzle-kit": "^0.31.7",
		"drizzle-orm": "^0.44.7",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.2",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"openai": "^6.10.0",
		"postgres": "^3.4.7"
	}
}
